# Directory Lite Deployment Configuration
# Set to 'true' to enable Directory Lite mode (vendor and guest only)
NEXT_PUBLIC_DIRECTORY_LITE=false

# Individual Feature Flags (overrides Directory Lite mode)
# Authentication & Roles
NEXT_PUBLIC_ENABLE_PARENT_AUTH=true
NEXT_PUBLIC_ENABLE_VENDOR_AUTH=true
NEXT_PUBLIC_ENABLE_ADMIN_AUTH=true

# User Features
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_FAVORITES=true
NEXT_PUBLIC_ENABLE_BOOKMARKS=true

# Dashboard Features
NEXT_PUBLIC_ENABLE_PARENT_DASHBOARD=true
NEXT_PUBLIC_ENABLE_VENDOR_DASHBOARD=true
NEXT_PUBLIC_ENABLE_ADMIN_DASHBOARD=true

# UI Components
NEXT_PUBLIC_ENABLE_REVIEW_BUTTONS=true
NEXT_PUBLIC_ENABLE_FAVORITE_BUTTONS=true
NEXT_PUBLIC_ENABLE_BOOKMARK_BUTTONS=true

# API Features
NEXT_PUBLIC_ENABLE_REVIEW_API=true
NEXT_PUBLIC_ENABLE_FAVORITE_API=true
NEXT_PUBLIC_ENABLE_BOOKMARK_API=true

# Navigation
NEXT_PUBLIC_SHOW_PARENT_NAV=true
NEXT_PUBLIC_SHOW_REVIEW_NAV=true
NEXT_PUBLIC_SHOW_FAVORITE_NAV=true

# Example Directory Lite Configuration:
# NEXT_PUBLIC_DIRECTORY_LITE=true
# This automatically sets:
# - NEXT_PUBLIC_ENABLE_PARENT_AUTH=false
# - NEXT_PUBLIC_ENABLE_REVIEWS=false
# - NEXT_PUBLIC_ENABLE_FAVORITES=false
# - NEXT_PUBLIC_ENABLE_PARENT_DASHBOARD=false
# - All review/favorite UI components disabled
# - All review/favorite API endpoints disabled
