{
  "version": 1,
  "context": {
    "include": [
      "rules/*.md",
      "for cursor/context/*.md"
    ],
    "exclude": [
      "**/*.csv",
      "**/cookies.txt",
      "**/tmp*/**",
      "**/*_BACKUP.md",
      "**/*_ARCHIVE.md"
    ]
  },
  "rules": {
    "enforceCSS": true,
    "styleGuide": "Bauhaus Mid-Century Modern Hollywood",
    "colorContrast": {
      "noLightTextOnLight": true,
      "noDarkTextOnDark": true
    },
    "deployment": {
      "backend": "Supabase",
      "hosting": "Vercel",
      "disallowed": ["Sanity", "Airtable"],
      "useMCPTools": ["git", "stripe", "vercel"],
      "postDeployCheck": {
        "enabled": true,
        "checkType": "deployment_status",
        "delaySeconds": 120
      }
    },
    "commitPolicy": {
      "requireDescription": true,
      "requireUniqueBuildTag": true,
      "runSyntaxCheckBeforeCommit": true
    },
    "logging": {
      "updateChangeLog": true,
      "changeLogFile": "for cursor/context/context_decisions.md"
    }
  },
  "metadata": {
    "notes": [
      "This configuration automatically loads all project documentation from `.cursor/rules/` and `.cursor/for cursor/context/`.",
      "Cursor and MCP will use Git, Stripe, and Vercel integrations when available.",
      "After each successful push to Vercel, deployment status will be checked after a 120-second delay."
    ]
  }
}
